<h1>Videos</h1>

<%= will_paginate @videos %>

<p>Videos still to be watched (<%= @videos.count %>):</p>
<ul>
  <% @videos.each do |video| %>
    <li><%= link_to video.filename, video %></li>
  <% end %>
</ul>

<%= will_paginate @videos %>

<h2>Stats</h2>

<p>Videos watched: <%= Video.done.count %></p>
<% users.each do |user, _| %>
  <p><%= user %>: <%= Video.done.where(username: user).count %></p>
<% end %>
